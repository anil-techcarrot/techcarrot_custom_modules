<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Employee Code and Related Fields to Form -->
    <record id="view_employee_form_code_fields" model="ir.ui.view">
        <field name="name">hr.employee.form.code.fields</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!--            <field name="work_email" position="after">-->
            <xpath expr="//field[@name='work_mail']" position="after">
                <field name="employee_code"/>
            </xpath>

            <!--                <group string="Employee Code &amp; Classification" colspan="4">-->
            <!--                    <group>-->

            <xpath expr="//field[@name='employee_name_english']" position="after">
                <field name="engagement_location"/>
            </xpath>
            <xpath expr="//field[@name='employee_name_arabic']" position="after">
                <field name="payroll_location"/>
            </xpath>
            <xpath expr="//field[@name='nationality_at_birth_id']" position="after">
                <field name="employment_type"/>
            </xpath>
            <!--                    </group>-->
            <!--                    <group>-->


            <!--                    </group>-->
            <!--                </group>-->
        </field>
        <!--        </field>-->
    </record>

    <!-- Add Generate Button in header -->
    <record id="view_employee_form_code_button" model="ir.ui.view">
        <field name="name">hr.employee.form.code.button</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_code_generation_wizard"
                        type="object"
                        string="Generate Employee Code"
                        class="oe_highlight"
                        invisible="employee_code"/>
            </xpath>
        </field>
    </record>

    <!-- Bulk Generate Action -->
    <record id="action_bulk_generate_codes" model="ir.actions.server">
        <field name="name">Generate Employee Codes (Bulk)</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_bulk_generate_employee_codes()</field>
    </record>
</odoo>