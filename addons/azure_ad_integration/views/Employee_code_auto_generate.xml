<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Generate Button to Employee Form -->
    <record id="view_employee_form_employee_code_button" model="ir.ui.view">
        <field name="name">hr.employee.form.employee.code.button</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add button in header (top right) -->
            <xpath expr="//header" position="inside">
                <button name="action_generate_employee_code"
                        type="object"
                        string="Generate Employee Code"
                        class="oe_highlight"
                        attrs="{'invisible': [('employee_code', '!=', False)]}"/>
            </xpath>

            <!-- Make employee_code readonly and add button next to field -->
            <xpath expr="//field[@name='employee_code']" position="replace">
                <field name="employee_code" readonly="1"/>
                <button name="action_generate_employee_code"
                        type="object"
                        string="Generate"
                        class="btn-primary"
                        icon="fa-refresh"
                        attrs="{'invisible': [('employee_code', '!=', False)]}"/>
            </xpath>
        </field>
    </record>

    <!-- Add Bulk Generate Action in Employees List -->
    <record id="action_bulk_generate_employee_codes" model="ir.actions.server">
        <field name="name">Generate Employee Codes (Bulk)</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = records.action_bulk_generate_employee_codes()
        </field>
    </record>
</odoo>