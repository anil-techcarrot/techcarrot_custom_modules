<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- License Dashboard List View (Changed from 'tree' to 'list' for Odoo 18/19) -->
    <record id="view_azure_license_tree" model="ir.ui.view">
        <field name="name">azure.license.config.tree</field>
        <field name="model">azure.license.config</field>
        <field name="arch" type="xml">
            <list string="Azure Licenses" create="false" edit="false" delete="false">
                <header>
                    <button name="action_sync_licenses_from_azure"
                            type="object"
                            string="Sync from Azure"
                            class="btn-primary"/>
                </header>
                <field name="license_name"/>
                <field name="total_licenses"/>
                <field name="assigned_licenses"/>
                <field name="available_licenses"
                       decoration-danger="available_licenses &lt; 5"
                       decoration-success="available_licenses &gt;= 10"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <!-- License Dashboard Form View -->
    <record id="view_azure_license_form" model="ir.ui.view">
        <field name="name">azure.license.config.form</field>
        <field name="model">azure.license.config</field>
        <field name="arch" type="xml">
            <form string="Azure License" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="license_name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="License Information">
                            <field name="license_sku" readonly="1"/>
                            <field name="total_licenses" readonly="1"/>
                            <field name="assigned_licenses" readonly="1"/>
                            <field name="available_licenses" readonly="1"/>
                        </group>
                        <group string="Sync Information">
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- License Dashboard Action -->
    <record id="action_azure_license_dashboard" model="ir.actions.act_window">
        <field name="name">Azure Licenses</field>
        <field name="res_model">azure.license.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No license information available
            </p>
            <p>
                Click "Sync from Azure" to fetch license information.
            </p>
        </field>
    </record>

    <!-- Add Menu Item -->
    <menuitem id="menu_azure_licenses"
              name="Azure Licenses"
              parent="hr.menu_hr_configuration"
              action="action_azure_license_dashboard"
              sequence="100"/>
</odoo>