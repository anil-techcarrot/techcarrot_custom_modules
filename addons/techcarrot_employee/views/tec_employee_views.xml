                            <field name="created_date_time" string="Created Date and Time"/>
                            <field name="last_modified_by" string="Last Modified By"/>
                            <field name="modify_date_time" string="Modified Date and Time"/>
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>
