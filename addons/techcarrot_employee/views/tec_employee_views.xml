<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="techcarrot_employee_inherit_form_view" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!--inherited view place changed(sriman)-->
            <xpath expr="//field[@name='employee_properties']" position="before">
                <!-- 3 COLUMN LAYOUT - Each column in separate group -->
                <group colspan="4" col="6" string="">
                    <!-- COLUMN 1 -->
                    <group string="" colspan="2">
                        <field name="employee_first_name"/>
                        <field name="employee_name_english"/>
                        <field name="engagement_location" widget="selection"/>
                    </group>

                    <!-- COLUMN 2 -->
                    <group string="" colspan="2">
                        <field name="employee_middle_name"/>
                        <field name="employee_name_arabic"/>
                        <field name="payroll_location"/>
                    </group>

                    <!-- COLUMN 3 -->
                    <group string="" colspan="2">
                        <field name="employee_last_name"/>
                        <field name="nationality_at_birth_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="employment_type"/>
                    </group>
                </group>

                <field name="country_code" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='department_id']" position="before">
                <field name="emp_code"/>
            </xpath>
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <field name="country_code_for_work_mobile"/>
            </xpath>
            <xpath expr="//field[@name='next_appraisal_date']" position="after">
                <field name="billable"/>
                <field name="billing_amt"/>
                <field name="billing_currency_id"/>
                <field name="emp_category_id" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>

